#!/bin/sh
for p in \
    ${HOME}/opt/texlive/bin/x86_64-linux \
    ${HOME}/{usr/local/,opt/{racket/7.5/,go/},}bin; do
        PATH=${p}:${PATH}
done

case ${SHELL} in
(*/bin/ksh)
    export ENV=${HOME}/etc/kshrc
    . ${HOME}/etc/kshrc
    ;;
esac

while read -r l; do
    export ${l}
done <<EOF
EDITOR=vi
VISUAL=vi
MANPATH=${HOME}/usr/local/share/man:/usr/share/man
MANPAGER=less
INPUTRC=${HOME}/etc/inputrc
XDG_CACHE_HOME=${HOME}/usr/local/share/cache
XDG_CONFIG_HOME=${HOME}/etc/prog.d
XDG_DESKTOP_DIR=/no
XDG_DOWNLOAD_DIR=/no
XDG_DATA_HOME=${HOME}/usr/local/share
GOPATH=${HOME}/opt/go:${HOME}/usr/src/go
PYTHONUSERBASE=${HOME}/opt/python
PYTHONPATH=${HOME}/opt/python
PYTHONSTARTUP=${HOME}/etc/prog.d/pythonrc
LESSHISTFILE=${XDG_CACHE_HOME}/lesshst
GNUPGHOME=${HOME}/etc/gnupg
EOF
# FREETYPE_PROPERTIES=truetype:interpreter-version=38
