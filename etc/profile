#!/bin/sh
# $HOME/etc/profile
# source our shellrc
case $SHELL in
    *ksh*) source $HOME/etc/kshrc;;
    *bash*) source $HOME/etc/bashrc;;
esac

# exporting variables
export EDITOR=nvim
export VISUAL=nvim
export TERMINAL="tabbed -c -r 2 st -w ''"
#export MANPAGER="nvim -c 'set ft=man nonu ts=2'"

# path variables
export PATH=$PATH:$HOME/bin/:$HOME/.local/bin:$HOME/usr/local
export PATH=$PATH:$HOME/usr/local/bin
export PATH=$PATH:$HOME/opt/texlive/bin/x86_64-linux
export PATH=$PATH:$HOME/opt/cargo/bin

# documentations
export MANPATH=$MANPATH:$HOME/usr/local/man:$HOME/usr/man
export MANPATH=$MANPATH:$HOME/opt/texlive/texmf-dist/doc/man
export INFOPATH=$INFOPATH:$HOME/opt/texlive/texmf-dist/doc/info

# XDG env vars
export XDG_CACHE_HOME="$HOME/var/cache"
export XDG_CONFIG_HOME="$HOME/etc"
export XDG_DESKTOP_DIR="/non/existent"
export XDG_DOWNLOAD_DIR="$HOME/var/downloads"

# rust env vars
export RUSTUP_HOME="$HOME/opt/rustup"
export CARGO_HOME="$HOME/opt/cargo"
