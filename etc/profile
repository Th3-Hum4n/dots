#!/bin/sh
case $SHELL in
    (*mksh*) . $HOME/etc/mkshrc;;
    (*bash*) . $HOME/etc/bashrc;;
esac

for e in "nvim -i $HOME/var/cache/shada" "vim -i $HOME/var/cache/viminfo" vis vi ed; do [ -n $(command -v $e) ] && { export EDITOR=$e; export VISUAL=$e; break; }; done
export TERMINAL="tabbed -c -r 2 st -w ''"
export MANPAGER=$HOME/usr/local/manpager

export PATH=$PATH:$HOME/bin:$HOME/.local/bin:$HOME/usr/local
export PATH=$PATH:$HOME/usr/local/bin
export PATH=$PATH:$HOME/opt/texlive/bin/x86_64-linux
export PATH=$PATH:$HOME/opt/cargo/bin

export MANPATH=$MANPATH:$HOME/usr/share/man:$HOME/usr/man:$HOME/usr/local/share/man
export MANPATH=$MANPATH:$HOME/opt/texlive/texmf-dist/doc/man
export INFOPATH=$INFOPATH:$HOME/opt/texlive/texmf-dist/doc/info

export XDG_CACHE_HOME="$HOME/var/cache"
export XDG_CONFIG_HOME="$HOME/etc"
export XDG_DESKTOP_DIR="/non/existent"
export XDG_DOWNLOAD_DIR="$HOME/var/downloads"
export XDG_DATA_HOME="$HOME/var/lib"
export XAUTHORITY="$XDG_CACHE_HOME/Xauthority"

export RUSTUP_HOME="$HOME/opt/rustup"
export CARGO_HOME="$HOME/opt/cargo"

export MAIL="$HOME/var/mail/inbox"

export CPATH="$HOME/usr/local/include:$HOME/usr/include"

export PYTHONUSERBASE="$PYTHONUSERBASE:$HOME/usr/lib/python3"
export PYTHONPATH="$PYTHONPATH:$HOME/usr/lib/python3"
export PYTHONSTARTUP="$HOME/etc/pythonrc"

export NVIM_LOG_FILE="$HOME/var/logs/nvim.log"
export LESSHISTFILE="$HOME/var/cache/lesshst"
