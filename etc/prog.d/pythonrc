import atexit
import sys
import readline

try:
    readline.read_history_file("/home/viz/var/cache/python_history")
    # default history len is -1 (infinite), which may grow unruly
    readline.set_history_length(-1)
except FileNotFoundError:
    pass

atexit.register(readline.write_history_file, "/home/viz/var/cache/python_history")

