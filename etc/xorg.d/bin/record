#!/bin/sh
#
# http://github.com/mitchweaver/bin
#
# Records a selected rectangle with ffmpeg.
#

video_path=${1:-"${HOME}/var/videos/captures/record-`date '+%b_%d-%H:%M'`"}

set -- `crud`

       # -pix_fmt yuv420p
ffmpeg -y -f x11grab      \
       -s ${3}x${4}       \
       -r 30              \
       -i :1.0+${1},${2}  \
       -qscale 0          \
       ${video_path}.mp4
