#!/bin/sh
# send notification using lemonbar
ww=`res -w`
wh=`res -h`
w=$((${#@} * 12))
h=50
x=$((ww - w - 20))
y=20
(echo "%{c}${@}"; sleep 2) |                                 \
    lemonbar -d                                              \
             -g ${w}x${h}+${x}+${y}                          \
             -f 'ctrld:size=12'                            \
             -F $(cat /tmp/info/wm/colors/normfg)            \
             -B $(cat /tmp/info/wm/colors/normbg)            \
             -R $(cat /tmp/info/wm/borders/selcol)           \
             -r $(cat /tmp/info/wm/borders/size)             &
