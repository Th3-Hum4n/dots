#!/bin/dash
# send notification using lemonbar

ww=`res -w`
wh=`res -h`
w=$((200 + `echo "${@}" | wc -m`))
h=50
x=$((ww - 125 - w / 2))
y=$((wh - 40 - (h / 2)))

(echo "%{c}${@}"; sleep 2) |                                 \
    lemonbar -db                                             \
             -g ${w}x${h}+${x}+${y}                          \
             -F $(cat /tmp/info/dwm/colors/normfg)           \
             -B $(cat /tmp/info/dwm/colors/normbg)           \
             -R $(cat /tmp/info/dwm/borders/selcol) -r 1
