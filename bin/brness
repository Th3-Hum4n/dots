#!/bin/dash
# brightness script.
dir=/sys/class/backlight/intel_backlight
mb=`cat ${dir}/max_brightness`
cb=`cat ${dir}/brightness`

gp() {
    echo $(((${1} * ${mb}) / 100))
}

case ${1} in
    (-i) echo $((`gp ${2}` + ${cb})) > ${dir}/brightness;;
    (-d) echo $((-`gp ${2}` + ${cb})) > ${dir}/brightness;;
    (-s) echo ${2} > ${dir}/brightness;;
    (-g) echo `gp ${cb}`;;
esac
