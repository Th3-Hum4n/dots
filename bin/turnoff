#!/bin/dash

options="lock\nshutdown\nreboot\nkill x"

selected_option="$(echo ${options} | menu sel)"

[ -f ${HOME}/tmp/bkup.lock ] && { notify-send "bkup is running!"; exit 1; }

case ${selected_option} in
(shutdown|reboot) sudo ${selected_option};;
(lock) slock;;
("kill x") pkill -15 Xorg;;
esac
