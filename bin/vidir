#!/bin/sh
# Clone of vidir(1) from moreutils!

DIR="${1:-.}"

FILES=`find "${DIR}" -type f`

echo "${FILES}" >/tmp/vidir.${$}
${EDITOR:-vi} /tmp/vidir.${$}

IFS='
'
set -- ${FILES}

nl=1
f=
while read -r l; do
	eval "f=\${${nl}}"
	if test -z "${l}"; then
		rm "${f}"
	elif test "${l}" != "${f}"; then
		test ! -d "${l%/*}" && {
			printf '# %s does not exist! not moving %s to %s\n' "${l%/*}" "${f}" "${l}"
			continue
		}
		test -e "${l}" && test "${l}" != "${f}" && {
			printf '# %s already exists!\n' "${l}"
			continue
		}
		mv "${f}" "${l}"
	fi
	: $((nl+=1))
done </tmp/vidir.${$}

rm /tmp/vidir.${$}