#!/bin/sh
# mostly modelled after github.com/neeasade/dotfiles/blob/master/bin/bin/elisp

pgrep -x emacs >/dev/null || exit 1

chk=1

[ "${1}" = -t ] && {
	trim=1
	shift
}

erun() {
	# When Emacs is stuck doing something else, quit
	if has timeout; then
		timeout 1 emacsclient --eval "${@}"
	else
		emacsclient --eval "${@}"
	fi
}

die() {
	[ -n "${f}" ] && [ ${chk} -eq 0 ] && rm -f ${tmp}
	exit ${1:-0}
}

args() {
	args="'("
	for i in "${@}"; do
		args="${args} \"${i}\""
	done
	args="${args})"
}

[ -t 0 ] || {
	if [ "${1}" = '-' ]; then
		f=`mktemp` chk=0
		cat ->${f}
		shift
		args "${@}"
	else
		stdin=`mktemp`
		cat ->${stdin}
		stdin=\"${stdin}\"
	fi
	
}

[ -f "${1}" ] && {
	f="${1}"
	shift
	args "${@}"
}

[ -z "${f}" ] && [ -n "${*}" ] && lisp="${*}"

res=`erun "${lisp:-"(vz/eval-file \"${f}\" ${stdin:-nil} ${args:-nil})"}"`
e=${?}

[ ${trim:-0} -eq 1 ] && {
	res=${res#[\"\(]}
	res=${res%[\"\)]}
}
echo "${res}" && die ${e}
