#!/bin/sh
# mostly modelled after github.com/neeasade/dotfiles/blob/master/bin/bin/elisp

pgrep -x emacs >/dev/null || exit 1

chk=1

erun() {
	emacsclient --eval "${@}"
}

die() {
	[ -n "${f}" ] && [ ${chk} -eq 0 ] && rm -f ${tmp}
	exit ${1:-0}
}

[ -p /dev/stdin ] && {
	if [ "${1}" = '-' ]; then
		f=`mktemp` chk=0
		cat ->${f}
		args="\"${@}\""
	else
		stdin=`mktemp`
		cat ->${stdin}
		stdin="\"${stdin}\""
	fi
	
}

[ -f "${1}" ] && {
	f="${1}"
	shift
	args="\"${@}\""
}

[ -z "${f}" ] && [ -n "${@}" ] && lisp="${*}"

res=`erun "${lisp:-"(vz/eval-file \"${f}\" ${stdin:-nil} ${args:-nil})"}"`

if [ -z "${res}" ] || [ "${res}" = 'nil' ]; then
  	 echo && die 1
else
	echo "${res}" && die
fi
