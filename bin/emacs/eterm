#!/usr/bin/env elisp
;; -*- mode: emacs-lisp -*-
;; Return term so we can find the window and embed it in tabbed if needed!
;; TODO: * Find out how to embed automatically? -- Might have to return frame id

(let* ((term (format "*term-%d*" (random)))
       (frame (make-frame '((window-system . x)
                            (width . 80))))
       (default-directory (or (getenv "PWD") (getenv "HOME"))))
  (select-frame frame)
  (shell term)
  (delete-other-windows)
  (vz/term-mode)
  (setq vz/term-mode--frame frame
        mode-line-format nil)
  term)
