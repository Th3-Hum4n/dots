#!/bin/dash
# dmenu launcher with my patches

# get resolution, screen height, screen width, etc.
# resolution stuff stolen from mitch :p
sw=$(res -w)
sh=$(res -h)

dmenu_w=$((sw / 2))
dmenu_lines=$((sw / 50))
dmenu_x=$((sw / 2 - dmenu_w / 2))
dmenu_y=$((sh / 5 - dmenu_lines))

. $HOME/var/cache/tm/colors/colors.sh

font="ShureTechMono Nerd Font:size=10"
selbg=$color8
selfg=$color15
normbg=$color0
normfg=$color7
borderpx=$(cat /tmp/dwm_info/borderpx)
borcol=$color5

app_run() {
    dmenu_run -bpx $borderpx -x $dmenu_x -y $dmenu_y -w $dmenu_w\
        -l $dmenu_lines -fn "$font" -nf "$normfg" -nb "$normbg"\
        -sb "$selbg" -sf "$selfg" -i -p "run:"
    exit
}

sel() {
    dmenu -bpx $borderpx -x $dmenu_x -y $dmenu_y -w $dmenu_w\
        -l $dmenu_lines -fn "$font" -nf "$normfg" -nb "$normbg"\
        -sb "$selbg" -sf "$selfg" -i -p "select:" "$@"
    exit
}

case $1 in
    "sel")
        shift; sel "$@"
        ;;
    "run")
        app_run
        ;;
esac
