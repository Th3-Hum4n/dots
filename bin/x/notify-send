#!/bin/sh
# send notification using lemonbar

ww=`res -w`
wh=`res -h`
c=${@:-`cat -`}
w=$((${#c} * 13))
h=50
x=$((ww - w - 20))
y=20

(echo "%{c}${c}"; sleep 2) | 
	lemonbar -d \
			 -g ${w}x${h}+${x}+${y} \
			 -f "monospace:pixelsize=12" \
			 -F \#1c1e1d \
			 -B \#e7e7d4 \
			 -R \#6ecbdc \
			 -r 4 &
