#!/bin/sh

sw=$(res -w)
sh=$(res -h)

w=$((sw / 2))

has bc && w=$(echo "${sw} / 2.3" | bc)

l=$((sw / 50))
x=$((sw / 2 - w / 2))
y=$((sh / 3 - l))

sel() {
	dmenu -bp 2 -x ${x} -y ${y} -w ${w} \
		  -l ${l} -i \
		  -p "select:" ${@}
}

run() {
	echo "chromium
st
screenshot
turnoff
record
dmenu_dir
subs" | sel -p "run:"
}

case ${1} in
sel)
	shift
	case ${@} in *-wi*) borderpx=0 ;; esac
	sel "${@}"
	;;
*)
	run
	;;
esac
