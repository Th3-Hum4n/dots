#!/bin/sh

sw=$(res -w)
sh=$(res -h)

w=$((sw / 3))

l=$((sw / 50))
x=$((sw / 2 - w / 2))
y=$((sh / 3))

sel() {
	dmenu -x ${x} -y ${y} -w ${w} \
		  -l ${l} -i \
		  -p "select:" ${@}
}

run() {
	echo "chromium
st
screenshot
turnoff
record
dmenu_dir
subs" | sel -p "run:"
}

case ${1} in
sel)
	shift
	sel "${@}"
	;;
*)
	run
	;;
esac
