#!/bin/sh
# extract different type of archives

dest="${2:-./}"

case ${1} in
(*.tar.gz|*.tgz)
	gzip -d -c "${1}" | tar -x -C "${dest}"
	;;
(*.tar.bz2)
	bzip2 -d -c "${1}" | tar -x -C "${dest}"
	;;
(*.tar.xz)
	xz -d -c "${1}" | tar -x -C "${dest}"
	;;
(*.tar)
	tar -x -f "${1}" -C "${dest}"
	;;
(*.zip)
	unzip "${1}" -d "${dest}"
	;;
(*.7z)
	7z -o"${dest}" x "${1}"
	;;
esac
