#!/bin/sh
#
# wrapper script around couple of scripts

[ -n "${1}" ] && tm "${HOME}/etc/colors/${1}"

# do all the things which need to be done after running tm

# lets recompile all the suckless software
rcsl

# lets prepare the startpage
prsp

# restart wm
xdotool key alt+shift+q

[ ${WM} = 'wchf' ] && {
    popcfs
    clbors
}
