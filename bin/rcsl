#!/bin/dash
# script to recompile suckless software

base_dir="$HOME/usr/src/c"
sltools="dwm dmenu st tabbed"

compile() {
    while [ ${#} -gt 0 ]; do
        cd ${base_dir}/${1}
        echo "compiling ${1}"
        make -j4 clean install && make clean
        shift
    done
}

[ $# -eq 0 ] && compile ${sltools} ||
    compile ${@}
