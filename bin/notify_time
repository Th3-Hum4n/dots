#!/bin/dash

case $1 in
    -t) time_interval=$2;;
    -h|*) echo "help\n---\n[-t] time interval in mins"; return;;
esac

while true; do
    cur_time="$(date +%H:%M)"
    notify-send -t 5000 -u critical "current time: $cur_time"
    echo "notification sent $cur_time"
    sleep $(($time_interval * 60))
done
