# -*- mode: sh -*-

while read -r al; do
	a ${al%% *}="${al}"
done <<EOF
df -h
du -h
mv -i
cp -r
ln -s
free -h
fc-cache --verbose
grep -i
su -
ls -AF
cal -s
EOF

a mkd='mkdir -p'

# This is the best way I know of to detect systemd
has systemctl ||
	for i in reboot poweroff shutdown; {
		a ${i}="doas ${i}"
	}
